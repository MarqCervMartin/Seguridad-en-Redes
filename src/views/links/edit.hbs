<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{pedido.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value= "{{pedido.nombre}}" class="form-control" name="nombre" placeholder="Nombre Producto" autofocus >
                        </div>
                        <div class="form-group">
                            <input type="number" value= "{{pedido.cantidad}}" name="cantidad" class="form-control" placeholder="Cantidad">
                        </div>
                        <div class="form-group">
                            <textarea name="mensaje" rows="2" class="form-control" placeholder="Mensaje">{{pedido.mensaje}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>